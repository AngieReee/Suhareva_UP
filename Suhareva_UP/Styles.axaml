<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
    </Border>
  </Design.PreviewWith>

	<Style Selector="TextBlock">
		<Setter Property="FontFamily" Value="Segoe UI"/>
	</Style>

	<Style Selector="StackPanel.mainSP">
		<Setter Property="HorizontalAlignment" Value="Center"/>
	</Style>

	<Style Selector="StackPanel.oneLine">
		<Setter Property="Orientation" Value="Horizontal"/>
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
	</Style>
	
	<Style Selector="StackPanel.oneLine2">
		<Setter Property="Orientation" Value="Horizontal"/>
		<Setter Property="HorizontalAlignment" Value="Left"/>
		<Setter Property="Margin" Value="12 10 10 10"/>
	</Style>

	<Style Selector="StackPanel.listSP">
		<Setter Property="HorizontalAlignment" Value="Center"/>
	</Style>

	<Style Selector="TextBlock.listitemTB">
		<Setter Property="FontSize" Value="18"/>
		<Setter Property="Margin" Value="0 5 0 0"/>
	</Style>

	<Style Selector="TextBlock.listitemTB2">
		<Setter Property="FontSize" Value="16"/>
		<Setter Property="HorizontalAlignment" Value="Right"/>
		<Setter Property="Margin" Value="0 5 0 0"/>
	</Style>
	
	<Style Selector="TextBlock.listitemTB3">
		<Setter Property="FontSize" Value="16"/>
		<Setter Property="Margin" Value="0 5 0 0"/>
	</Style>

	<Style Selector="StackPanel.DiscountSP">
		<Setter Property="HorizontalAlignment" Value="Right"/>
	</Style>

	<Style Selector="TextBlock.DiscountTB">
		<Setter Property="HorizontalAlignment" Value="Right"/>
		<Setter Property="Margin" Value="100 0 0 0"/>
	</Style>

	<Style Selector="Border.listItemB">
		<Setter Property="BorderBrush" Value="#67BA80"/>
		<Setter Property="BorderThickness" Value="2"/>
		<Setter Property="Padding" Value="5"/>
		<Setter Property="Background" Value="#fcf9f2"/>
		<Setter Property="Width" Value="600"/>
		<Setter Property="CornerRadius" Value="3"/>
	</Style>

	<Style Selector="Button.AddButton">
		<Setter Property="Background" Value="#67BA80"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="HorizontalAlignment" Value="Right"/>
		<Setter Property="Margin" Value="0 0 25 0"/>
	</Style>

	<Style Selector="Button.NewButton">
		<Setter Property="Background" Value="#67BA80"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="Margin" Value="0 10 0 0"/>
	</Style>

	<Style Selector="Button.BackButton">
		<Setter Property="Background" Value="#67BA80"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="HorizontalAlignment" Value="Right"/>
	</Style>

	<Style Selector="Button.SaveButton">
		<Setter Property="Background" Value="#67BA80"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="Margin" Value="0 15 0 0"/>
	</Style>

	<Style Selector="TextBlock.TitleTB">
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="Margin" Value="20"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="FontSize" Value="20"/>
	</Style>

	<Style Selector="TextBox.partnerInput">
		<Setter Property="Width" Value="550"/>
		<Setter Property="Margin" Value="10 10 0 0"/>
		<Setter Property="HorizontalAlignment" Value="Right"/>
	</Style>

	<Style Selector="ComboBox.partnerCBInput">
		<Setter Property="Width" Value="550"/>
		<Setter Property="Margin" Value="10 10 0 0"/>
		<Setter Property="HorizontalAlignment" Value="Right"/>
	</Style>

	<Style Selector="TextBlock.inputNameTB">
		<Setter Property="Margin" Value="0 10 0 0"/>
		<Setter Property="FontSize" Value="17"/>
		<Setter Property="FontWeight" Value="Medium"/>
	</Style>
	
</Styles>
